/* pages/my.wxss */
.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color:#F5F5F5;
}
.blockLine {
  height: 5px;
}
.panel {
  margin: 5px 0;
  padding: 10px;
  background-color: #fff;
}
.margin {
  margin: 0;
}
.head {
  width:44px;
  height: 44px;
  border-radius: 22px;
  display: inline-block;
  vertical-align: middle;
}
.name {
  font-size: 16px;
  display: inline-block;
  vertical-align: middle;
  margin-left: 8px;
}
.icon {
 width: 50rpx;
 height: 50rpx;
 display: inline-block;
 vertical-align: middle;
}
.text {
  font-size: 14px;
  padding-left: 8px;
  vertical-align: middle;
}
.right {
  float: right;
  margin-top: 10rpx;
}
.arrow {
  width: 25rpx;
  height: 25rpx;
}